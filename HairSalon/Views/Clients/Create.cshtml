@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client
@using HairSalon.Models;

<h4>Add new client</h4>
<p><strong>NOTE:</strong> You need to have at least one stylist added before you can add a client!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Stylists") to add a stylist.</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.ClientFirstName)
  @Html.TextBoxFor(model => model.ClientFirstName)

  @Html.LabelFor(model => model.ClientLastName)
  @Html.TextBoxFor(model => model.ClientLastName)

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add new client" class="btn btn-default">
}
<p>@Html.ActionLink("Show list of stylists", "Index", "Stylists")</p>