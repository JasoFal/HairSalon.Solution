@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Client Details</h2>
<hr/>
<h3>Name: @Html.DisplayFor(model => model.ClientFirstName) @Html.DisplayFor(model => model.ClientLastName)</h3>
<h3>@Html.DisplayNameFor(model => model.Stylist): @Html.DisplayFor(model => model.Stylist.StylistFirstName) @Html.DisplayFor(model => model.Stylist.StylistLastName)</h3>

<p>@Html.ActionLink("Edit Client", "Edit", new { id = Model.ClientId })</p>
<p>@Html.ActionLink("Delete Client", "Delete", new { id = Model.ClientId })</p>
<p>@Html.ActionLink($"Back to {Model.Stylist.StylistFirstName} {Model.Stylist.StylistLastName} details", "Details", "Stylists", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Back to stylist list", "Index", "Stylists")</p>