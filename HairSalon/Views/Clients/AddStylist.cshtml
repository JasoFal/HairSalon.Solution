@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Add a stylist</h2>

<h4>Add a stylist to this client: @Html.DisplayFor(model => model.ClientLastName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)

  @Html.Label("Select Stylist")
  @Html.DropDownList("StylistId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>