@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet.</h3>
}
else
{
  <ul>
    <li>@Html.ActionLink($"{client.ClientFirstName} {client.ClientLastName}", "Details", new { id = client.ClientId })</li>
  </ul>
}

<p>@Html.ActionLink("Add new client", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>