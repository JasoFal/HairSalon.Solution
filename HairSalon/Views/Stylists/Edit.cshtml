@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Edit</h2>

<h4>Edit this stylists information: @Html.DisplayFor(model => model.StylistFirstName) @Html.DisplayFor(model => model.StylistLastName)</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.StylistFirstName)
  @Html.TextBoxFor(model => model.StylistFirstName)

  @Html.LabelFor(model => model.StylistLastName)
  @Html.TextBoxFor(model => model.StylistLastName)

  @Html.LabelFor(model => model.Details)
  @Html.TextBoxFor(model => model.Details)

  <input type="submit" value="Save">
}

<p>@Html.ActionLink("Back to list", "Index")</p>