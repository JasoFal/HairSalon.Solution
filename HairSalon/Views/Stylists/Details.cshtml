@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details</h2>
<hr />
<h3>Name: @Html.DisplayFor(model => model.StylistFirstName) @Html.DisplayFor(model => model.StylistLastName)</h3>
<p>@Html.DisplayNameFor(model => model.Details): @Html.DisplayFor(model => model.Details)</p>

@if (@Model.JoinEntities.Count == 0)
{
  <h3>No clients have been added to this stylist yet.</h3>
}
else
{
  <h3>Clients this stylist belongs to:</h3>
  <ul>
    @foreach (ClientStylist join in Model.JoinEntities)
    {
      <li>@join.Client.ClientFirstName @join.Client.ClientLastName</li>
      @using (Html.BeginForm("DeleteJoin", "Stylists"))
      {
        @Html.Hidden("joinId", @join.ClientStylistId)
        <input type="submit" value="Delete"/>
      }
    }
  </ul>
}

<p>@Html.ActionLink("Add client", "AddClient", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>
