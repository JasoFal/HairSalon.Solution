@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Add a client</h2>

<h4>Add a client to this stylist: @Html.DisplayFor(model => model.StylistFirstName) @Html.DisplayFor(model => model.StylistLastName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  @Html.Label("Select client")
  @Html.DropDownList("ClientId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>