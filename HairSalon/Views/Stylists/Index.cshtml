@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists List</h1>
@if (@Model.Count == 0)
{
  <h3>No stylists have been added to database.</h3>
}
@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.StylistFirstName + " " + stylist.StylistLastName}", "Details", new { id = stylist.StylistId })</li>
}
<p>@Html.ActionLink("Add new stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>